<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Section </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/public/css/newindex.css"> -->
    <link rel="stylesheet" href="/public/css/news.css">


</head>
<body>
  
  
  <% for(var i=0;i<=5; i++){ %>
    <div class="container1">
        <div class="news-box">
            <div class="news-flex-body">
                <div class="news-text">                    
                    <div class="topic">
                
                        <h5></h5>
                    </div>
                    
                    <div class="topic">
                        <h1><%- employee[i].title %> </h1>
                    </div>

                    <div class="topic">
                        <p><b>Description: </b><%- employee[i].description %></p>
                    </div>
                      <div class="topic">
                        <p><b>Source :</b><%- employee[i].source.name %></p>
                    </div>
                    <div class="topic">
                        <p> <b>publishedAt : </b><%- employee[i].publishedAt %></p>
                    </div>

                    <div class="learn-button">
                        <button class="btn btn-primary"><a class="color" href=<%- employee[i].url %> >Read Full Article</a></button>
                    </div>
                
                </div>

                <div class="news-image card ">
                    <div class="img card-img-top">
                        <img src=<%- employee[i].urlToImage %> alt="Image not found  ">
                       
                    </div>
                </div>
               

            </div>
            
        </div>
       
    </div>
    <% } %>


    


  
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</html>