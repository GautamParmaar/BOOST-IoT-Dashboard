            <a class="nav-link" href="#">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">FAQs</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <button class="btn"><a href="../public/LoginPage.html"><li class="nav-item text-white">Login</li></a></button>
          <div class="vertical-line"></div>
          <button class="btn"><a href="../public/SignUp.html"><li class="nav-item text-white">SignUp</li></a></button>
        </ul>
      </div>
    </div>
  </nav>
  
  <% for(var i=0;i<=5; i++){ %>
    <div class="container1">
        <div class="news-box">
            <div class="news-flex-body">
                <div class="news-text">                    
                    <div class="topic">
                
                        <h5></h5>
                    </div>
                    
                    <div class="topic">
                        <h1><%- employee[i].title %> </h1>
                    </div>

                    <div class="topic">
                        <p><b>Description: </b><%- employee[i].description %></p>
                    </div>
                      <div class="topic">
                        <p><b>Source :</b><%- employee[i].source.name %></p>
                    </div>
                    <div class="topic">
                        <p> <b>publishedAt : </b><%- employee[i].publishedAt %></p>
                    </div>

                    <div class="learn-button">
                        <button class="btn btn-primary"><a class="color" href=<%- employee[i].url %> >Read Full Article</a></button>
                    </div>
                
                </div>

                <div class="news-image card ">
                    <div class="img card-img-top">
                        <img src=<%- employee[i].urlToImage %> alt="Image not found  ">
                       
                    </div>
                </div>
               

            </div>
            
        </div>
       
    </div>
    <% } %>


    


  
</body>
