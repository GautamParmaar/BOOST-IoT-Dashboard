      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse m-5 text-lg-center" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          
            <ul class="dropdown-menu dropdown-menu-color" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item text-color-dropdown" href="LoginPage.html">Smart Notice Board</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-color-dropdown" href="#">Smart Dustbin</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-color-dropdown" href="#">Home Automation</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/News">News</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/TimeTable">Schedule</a>
